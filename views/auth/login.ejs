<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <form action="/auth/process" method="post">
        <input type="hidden" name="_csrf" value="<%= _csrf %>">
        <div class="login">
          <div class="form-group">
            <label class="control-label" for="username">User Name</label>
            <input class="form-control" id="username" type="text" name="username" placeholder="Input Login User Name" value="" autofocus required>
          </div>
          <div class="form-group">
            <label class="control-label" for="password">Password</label>
            <input class="form-control" id="password" type="password" name="password" placeholder="Input Login Password" value="" required>
          </div>
          <div class="col-xs-6"><button class="btn btn-primary" type="submit">Login</button></div>
          <div class="col-xs-6 text-right"><a class="btn btn-link" href="/signup">Create new user</a></div>
        </div>  
      </form>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>